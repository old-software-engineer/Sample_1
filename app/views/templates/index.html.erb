<div class="row wrapper border-bottom white-bg page-heading">
  <div class="col-lg-10">
    <h2><%= t('templates.templates_label')%></h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to t('home_label'), account_templates_path(@account) %>
      </li>
      <li class="active">
        <strong><%= t('templates.templates_label')%></strong>
      </li>
    </ol>
  </div>
</div>
<div class="wrapper wrapper-content  animated fadeInRight">
  <div class="row">
    <div class="col-sm-8">
      <div class="ibox">
        <div class="ibox-content">
          <div class="pull-right">
            <%= link_to t('templates.add_template'), new_account_template_path(@account), class: "btn btn-primary" %>
          </div>
          <h2><%= t('templates.templates_label')%></h2>
          <div class="clearfix"></div>
          <div class="clients-list">
            <ul class="nav nav-tabs">
                <li class="active"><a data-toggle="tab" href="#tab-1"><i class="fa fa-user"></i> <%= t('templates.templates_label')%></a></li>
            </ul>
            <div class="tab-content">
              <div id="tab-1" class="tab-pane active">
                <div class="full-height-scroll">
                  <div class="table-responsive">
                    <table class="table table-striped table-hover">
                      <% @templates.each do |template| %>
                        <tr>
                          <td><%= template.name %></td>
                          <td><%= template.created_at.strftime("%d.%m.%Y") %></td>
                          <td class="project-actions">
                            <%= link_to edit_account_template_path(@account, template), title: t('edit_label'), class: "btn btn-white btn-sm" do %>
                              <i class="fa fa-pencil"></i> <%= t('edit_label')%>
                            <% end %>
                            <%= link_to account_template_path(@account, template), method: :delete, data: { confirm: t('sure_message') }, title: t('delete_label'), class: "btn btn-white btn-sm" do %>
                              <i class="fa fa-remove"></i> <%= t('delete_label')%>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="ibox">
        <div class="ibox-content">
          <div class="tab-content">

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
