<div class="middle-box loginscreen animated fadeInDown">
  <div>
    <%= form_for(resource, as: resource_name, url: send("#{model_name}_update_user_registration_path"), html: {method: :put, multipart: true}) do |f| %>
      <%= devise_error_messages! %>
      <div class="form-group">
        <div class="avatar-edit">
          <% if @user.avatar.exists? %>
            <%= image_tag(@user.avatar.url(:thumb), class: "img-circle") %>
            <p class="text-center"><%= link_to t(:change), '#', id: "destroy-avatar", method: :get, remote: true %></p>
          <% else %>
            <%= f.file_field :avatar %>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :username, {:class => "control-label"} %>
        <%= f.text_field :username, {class: "form-control", required: true, autofocus: true} %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, {class: "form-control", required: true} %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div><%= t('devise.registration.edit.message_1')%>: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, {class: "form-control", autocomplete: "off"} %>
        <p class="help-block">(<%= t('devise.registration.edit.message_blank')%>)</p>
      </div>

      <div class="form-group">
        <%= f.label :current_password %>
        <%= f.password_field :current_password, {class: "form-control", autocomplete: "off"} %>
        <p class="help-block">(<%= t('devise.registration.edit.message_confirmation_password')%>)</p>
      </div>
      <div class="actions">
        <%= f.submit t(:update_label), {class: "btn btn-sm btn-primary btn-block"} %>
      </div>
    <% end %>
  </div>
</div>
