<h2><%= t('devise.confirmation.title')%></h2>


<%= form_for(resource, as: resource_name, url: send("#{model_name}_confirmation_path") , html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit t('devise.confirmation.title') %>
  </div>
<% end %>

<%= render "devise/shared/links" %>


