<div class="middle-box loginscreen animated fadeInDown">
  <div>
    <%= form_for(@user, url: update_user_registration_path, html: {method: :put, multipart: true}) do |f| %>
      <div class="form-group">
        <div class="avatar-edit">
          <% if @user.avatar.present? %>
            <%= user_avatar(current_user, class: 'img-circle', style: 'width:80px;height:80px;') %>
            <p class="text-center"><%= link_to t(:change), '#', id: "destroy-avatar", method: :get, remote: true %></p>
          <% else %>
            <%= f.file_field :avatar %>
          <% end %>
        </div>
      </div>
      <div class="form-group">
        <%= f.label :username, {:class => "control-label"} %>
        <%= f.text_field :username, {class: "form-control", required: true, autofocus: true} %>
      </div>

      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email, {class: "form-control", required: true} %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password, {class: "form-control", autocomplete: "off"} %>
        <span>Leave blank if you don't want to change it</span>
      </div>


      <div class="actions">
        <%= f.submit t(:update_label), {class: "btn btn-sm btn-primary btn-block"} %>
      </div>
    <% end %>
  </div>
</div>
